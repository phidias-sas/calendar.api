{
    "path": "/calendars/{calendarId}",

    "attributes": {
        "calendarId": {
            "$title": "ID del calendario a consultar",
            "$type": "string"
        }
    },

    "resources": [
        {"$ref": "/resources/calendars/calendarId/events.json"}
    ],


    "methods": {

        "any": {
            "response": {
                "code": 404,
                "$description": "No se encontro un calendario con el ID especificado"
            }
        },

        "get": {

            "title": "Obtener los datos de un calendario",

            "response": {
                "code": 200,
                "headers": {
                    "Content-Type": "application/json"
                },
                "body": {"$ref": "/entities/calendar.json"}
            }

        },

        "put": {

            "title": "Modificar un calendario",

            "request": {
                "headers": {
                    "Content-Type": "application/json"
                },

                "body": {
                    "$ref": "/entities/calendar.json",
                    "name": {"$required": false}
                }

            },

            "response": {
                "code": 200,
                "headers": {
                    "Content-Type": "application/json"
                },
                "body": {"$ref": "/entities/calendar.json"}
            }

        },

        "delete": {

            "title": "Eliminar el calendario especificado",

            "response": {
                "code": 200,
                "headers": {
                    "Content-Type": "application/json"
                },
                "body": {"$ref": "/entities/calendar.json"}
            }

        }

    }
}